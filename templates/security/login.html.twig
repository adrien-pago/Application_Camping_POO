{# Formulaire de connexion #}
<form action="{{ path('app_login') }}" method="post">
    {{ form_start(form) }}
    {{ form_row(form.nomCamping) }}
    {{ form_row(form.password) }}
    <button type="submit">Connexion</button>
    {{ form_end(form) }}
</form>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

